/* pages/changePwd/changePwd.wxss */

#changePwd {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.login_phcolor {
  font-size: 26rpx;
  color: #dfdfdf;
}

.login_input {
  width: 400rpx;
  height: 77rpx;
  border-bottom: 1rpx solid #dfdfdf;
  padding-left:100rpx;
  padding-right: 50rpx;
}

.login_btn {
  width: 553rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f63e5a;
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 22rpx;
  border-radius: 100px;
  text-align: center;
}

#changePwd>view {
  position: relative;
  margin-bottom: 39rpx;
  text-align: center;
}

#changePwd image {
  position: absolute;
}

.login_man_ico {
  width: 44rpx;
  height: 46rpx;
  left: 11rpx;
  top: 15rpx;
}

.login_phone_ico {
  width: 30rpx;
  height: 45rpx;
  left: 18rpx;
  top: 16rpx;
}
